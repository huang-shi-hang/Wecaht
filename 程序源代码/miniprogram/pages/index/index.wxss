/* 浮动按钮样式 */
.floatBtn{
  position: fixed;
  top: 50rpx;
  right: 50rpx;
}
.backimage{
  height: 100%;
  width: 100%;
}
.tool{
  height: 64rpx;
  text-align: right;
  line-height: 64rpx;
  margin: 20rpx 28rpx 20rpx 0;
}
.tool-item{
  display: inline-block;
  vertical-align: top;
  margin-right: 30rpx;
}
.tool-item image{
  height: 50rpx;
  width: 50rpx;
  vertical-align: -3px;
  margin-right: 10rpx;
}
.comment image{
  transform: scale(.85);
}