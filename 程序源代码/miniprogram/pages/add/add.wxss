/*已上传图片区域*/
.container {
    position: fixed;
     height: 100%;
     width: 100%;
     display: flex;
     flex-direction: column;
     align-items: center;
     justify-content: space-around;
     padding: 0cm;
   }

.photoBox{
    margin-top:50rpx;
    display: flex;
    flex-direction: column;
}
/*标题样式*/
.photoBox text{
    margin-bottom: 30rpx;
    text-align: center;
}

/*图片样式*/
.photoBox image{
    float: left;
    width: 250rpx;
    height: 250rpx;
}

.upbutton{
    width: 200rpx;
    height: 70rpx;
    color: #6699FF;
    border: 3rpx solid #6699FF;
    border-radius: 80rpx;
    font-size: 35rpx;
    margin-top: 40rpx;
    position: fixed;
    justify-content: center;
    align-items: center;
    bottom: 0.5cm;
}
.hover-class-1 {
    top: 3rpx;
    background-color: #e7f5ff;
  }

.backimage{
    height: 100%;
    width: 100%;
  }

